@model ML.Departamento
@{
    ViewBag.Title = "GetAll";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="container">
    <h2>Departamentos</h2>
    
    <div class="row">
        <dv style="float:right">
            @Html.ActionLink("+", "Form", "Departamento", htmlAttributes: new { @class = " btn btn-success" })
        </dv>

    </div>
    <hr />

    <div class="row">

        <table class="table table-responsive table-striped" >
            <thead>
                <tr>
                    <th>IdDepartamento</th>
                    <th>Nombre</th>
                    <th>IdArea</th>

                    <th>Editar</th>
                    <th>Eliminar</th>
                </tr>

            </thead>
            <tbody>
                @foreach(ML.Departamento departamento in Model.Departamentos)
                {
                    <tr>
                        <td>@departamento.IdDepartamento</td>
                        <td>@departamento.Nombre</td>
                        <td>@departamento.Area.IdArea</td>

                        <td class="text-center"><a class="btn btn-warning glyphicon glyphicon-edit" href="@Url.Action("Form", "Departamento", new {IdDepartamento = departamento.IdDepartamento})"></a></td>
                        <td class="text-center"><a class="btn btn-danger glyphicon glyphicon-trash" href="@Url.Action("Form", "Departamento", new {IdDepartamento = departamento.IdDepartamento})" onclick="return confirm('¿Estas seguro que quieres eliminar este registro?');"></a></td>
                    </tr>
                }

            </tbody>


        </table>

    </div>


</div>



